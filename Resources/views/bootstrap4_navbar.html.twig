{% extends '@DdrUtils/bootstrap4.html.twig' %}

{% set brand_url = '#' %}

{% block body %}
    {{ parent() }}

    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ brand_url }}">{% block brand %}{% endblock brand %}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarcollapse" aria-controls="navbarcollapse"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            {% block navbar_collapse %}
                <div class="collapse navbar-collapse" id="navbarcollapse">
                    {% block navbar_left %}
                        <ul class="navbar-nav mr-auto">
                            {% block navbar_left_content %}
                            {% endblock navbar_left_content %}
                        </ul>
                    {% endblock navbar_left %}
                    {% block navbar_right %}
                    {% endblock navbar_right %}
                </div>
            {% endblock navbar_collapse %}
        </div>
    </nav>
{% endblock body %}
