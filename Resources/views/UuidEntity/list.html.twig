{% extends 'DdrUtilsBundle:Entity:base.html.twig' %}
{% block entity_content %}
    <div class="page-header">
        <div class="pull-right">
            <a class="btn btn-default action create" href="{{ path(routes.edit,{'id':'new'}) }}">
                <i class="fa fa-plus"></i>
            </a>
        </div>
        <h1>List</h1>
    </div>

    <div class="pull-right">
        {{ pagination(pagination, app.request.attributes.get('_route'), app.request.query.all) }}
    </div>

    <table class="table">
        <thead>
        <tr>
            {% for field,displayName in fields %}
                <th class="{{ field }}">{{ displayName }}</th>
            {% endfor %}
            <th class="actions">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {% for field, displayName in fields %}
                    <td class="{{ field }}">{{ attribute(entity,field) }}</td>
                {% endfor %}
                <td class="actions">
                    <a href="{{ path(routes.detail,{'id':entity.uuid}) }}" class="btn btn-default btn-xs action detail">
                        <i class="fa fa-search"></i>
                    </a>
                    <a href="{{ path(routes.edit,{'id':entity.uuid}) }}" class="btn btn-default btn-xs action edit">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <a href="{{ path(routes.delete,{'id':entity.uuid}) }}" class="btn btn-default btn-xs action delete">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock entity_content %}
